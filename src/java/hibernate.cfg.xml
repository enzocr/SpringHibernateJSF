<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/sipreli?serverTimezone=UTC</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.connection.autocommit">true</property>
    <mapping resource="cr/ac/una/icai/sipreli/clases/Libro.hbm.xml"/>
    <mapping resource="cr/ac/una/icai/sipreli/clases/UsuarioLogin.hbm.xml"/>
    <mapping resource="cr/ac/una/icai/sipreli/clases/Prestamo.hbm.xml"/>
    <mapping resource="cr/ac/una/icai/sipreli/clases/Estudiante.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
